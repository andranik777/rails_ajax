<h1>Emails#index</h1>
<p>Find me in app/views/emails/index.html.erb</p>
<div class ="container">
<table class="table table-striped table-bordered table-dark ">

    <thead  class ="thead-dark"> 

        <tr>
            <td>ID</td>
            <td>Liste des emails</td>
            <td>Email sélectionné</td>
        </tr>
    </thead>
    <tbody id ="emails-list">
        <%@emails.each do |email|%>
            <tr>
                <td><%=email.id%></td>
                <td><%=email.object%></td>
                <td><%=link_to "Afficher", email_path(email.id), class: "btn btn-primary",remote: true%>
                <a href="<%=email_path(email.id)%>" class ="btn btn-danger" data-confirm ="supprimer l'article ?" data-method ="DELETE">supprimer</a>
                </td>
            </tr>
        <%end%>
    </tbody>

</table>

    <div class="form mt-5">
    <%= form_tag(emails_path, method: :post, class: "form", remote: true) do %>
        <button class="btn btn-primary" type="submit">recevoir un email</button>    
    <% end %>
    </div>


</div>